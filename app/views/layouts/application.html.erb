<!DOCTYPE html>
<html>
  <head>
    <title>Simply Size Chart</title>
    <link rel="icon" type="image/ico" href="size_chart1.png" />
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Simply Size Chart</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          	<li class="product_sizes active"><%= link_to  "Product Size", product_sizes_path(:shop => params[:shop]) %></li>
            <li class="product_size_charts"><%= link_to  "Product Size Chart", product_size_charts_path(:shop => params[:shop]) %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div style="margin-top: 6%;">
      <%= yield %>
    </div>
  </body>
</html>

<script type="text/javascript">
	$(function()
	{
		var path = window.location.pathname
		if (path == "/product_sizes") {
			$('.product_sizes').addClass('active')
		}
	});
</script>

<script type="text/javascript">
  $(function()
  {
    var path = window.location.pathname.split('/')[1]
    if (path == "product_sizes") {
      $('.product_sizes').addClass('active')
      $('.product_size_charts').removeClass('active')
      $('.sms_buckets').removeClass('active')
    }
    else if (path == "product_size_charts") {
      $('.product_sizes').removeClass('active')
      $('.product_size_charts').addClass('active')
    }
    else
    {
      $('.product_sizes').addClass('active')
      $('.product_size_charts').removeClass('active')
    }
  });
</script>

