<%= form_for(product_size) do |f| %>
  <% if product_size.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_size.errors.count, "error") %> prohibited this product_size from being saved:</h2>

      <ul>
      <% product_size.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-sm-12">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :product_size_name, "Size" %>
