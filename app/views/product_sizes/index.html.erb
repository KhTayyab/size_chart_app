<% content_for :javascript do %>
  <script type="text/javascript">
     ShopifyApp.ready(function(){
       ShopifyApp.Bar.initialize({ title: "Product size" });
     });
  </script>
<% end %>
<div style="margin-left:20px;">
  <%= link_to 'New Product Size', new_product_size_path(:shop => params[:shop]), :class => "btn btn-primary" %>  
</div>

<div class="col-sm-12">
  <h2 class="text-center">Product Sizes</h2>
  <div class="table-responsive">
    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th class="col-sm-10">Product Size</th>
          <th class="col-sm-2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% if @product_sizes.count > 0 %>
          <% @product_sizes.each do |product_size| %>
            <tr>
              <td class="col-sm-10"><%= product_size.product_size_name %></td>
              <td class="col-sm-2"><%= link_to 'Destroy', product_size, method: :delete, :class => "btn btn-danger" %></td>
            </tr>
          <% end %>
        <% else %>
          <td colspan="4" class="text-center"> No History Found </td>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>